<?xml version="1.0" encoding="UTF-8"?>
<!--suppress JpaDomInspection -->
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="tutorialUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <validation-mode>NONE</validation-mode>
        <properties>
            <property name="hibernate.connection.driver_class" value="${hibernate.connection.driver_class}"/>
            <property name="hibernate.connection.url" value="${hibernate.connection.url}"/>
            <property name="hibernate.connection.username" value="${hibernate.connection.username}"/>
            <property name="hibernate.connection.password" value="${hibernate.connection.password}"/>
            <property name="hibernate.dialect" value="${hibernate.dialect}"/>
            <property name="hibernate.show_sql" value="${hibernate.show_sql}"/>
            <property name="hibernate.format_sql" value="${hibernate.format_sql}"/>
            <property name="hibernate.hbm2ddl.auto" value="hibernate.hbm2ddl.auto"/>
            
            <!-- Auto detect annotated entity classes and hibernate configuration files -->
            <property name="hibernate.archive.autodetection" value="class,hbm"/>

            <property name="hibernate.dbcp.initialSize" value="10"/>
            <property name="hibernate.dbcp.maxActive" value="20"/>
            <property name="hibernate.dbcp.maxIdle" value="20"/>
            <property name="hibernate.dbcp.minIdle" value="5"/>
            <property name="hibernate.dbcp.validationQuery" value="SELECT 1"/>

        </properties>
    </persistence-unit>
</persistence>